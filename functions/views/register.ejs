<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="../assets/register.css" rel="stylesheet" type="text/css">
        <title><%= language['SIGN_UP_TITLE'] %></title>
    </head>
    <body>
        <%- include('./partials/navbar.ejs') %>
        <form id="signInBox" method="post">
            <p style="font-size: large; color: red; display: flex; justify-content: center;" ><%= error %></p>
            <p style="font-size: large; color: green; display: flex; justify-content: center;" ><%= success %></p>
            <div id="signin">
                <h2><%= language['SIGN_UP_TITLE'] %></h2>
                <!-- Error for username -->
                <% if (form_error[0]) {%> 
                    <p style="font-size: xx-small; color: red;"><%= form_error[0].username %></p>
                <% } %> 
                <label id="username">
                    <input 
                        type="text"
                        name="username"
                        placeholder="<%= language['USERNAME_PLACE_HOLDER'] %>"
                    />
                </label> 
                <!-- Error for email -->
                <% if (form_error[0]) {%> 
                    <p style="font-size: xx-small; color: red;"><%= form_error[0].email %></p>
                <% } %> 
                <label id="email">
                    <input 
                        type="text"
                        name="email"
                        placeholder='<%= language['EMAIL_PLACE_HOLDER'] %>'
                    />
                </label>
                <!-- Error for password -->
                <% if (form_error[0]) {%> 
                    <p style="font-size: xx-small; color: red;"><%= form_error[0].password %></p>
                <% } %> 
                <label id="password">
                    <input 
                        type="password"
                        name="password"
                        placeholder='<%= language['PASSWORD_PLACE_HOLDER'] %>' 
                    />
                </label>
                <!-- Error for cofirmPassword -->
                <% if (form_error[0]) {%> 
                    <p style="font-size: xx-small; color: red;"><%= form_error[0].confirmpassword %></p>
                <% } %> 
                <label id="confirmpassword">
                    <input 
                        type="password"
                        name="confirmpassword"
                        placeholder='<%= language['CONFIRM_PASSWORD_PLACE_HOLDER'] %>' 
                    />
                </label>
                <!-- Error for personal number -->
                <% if (form_error[0]) {%> 
                    <p style="font-size: xx-small; color: red;"><%= form_error[0].pnr %></p>
                <% } %> 
                <label id="pnr">
                    <input 
                        type="text"
                        name="pnr"
                        placeholder='<%= language['PERSONAL_NUMBER_PLACE_HOLDER'] %>' 
                    />
                </label>
                <!-- Error for first name -->
                <% if (form_error[0]) {%> 
                    <p style="font-size: xx-small; color: red;"><%= form_error[0].name %></p>
                <% } %> 
                <label id="name">
                    <input 
                        type="text"
                        name="name"
                        placeholder='<%= language['FIRST_NAME_PLACE_HOLDER'] %>' 
                    />
                </label>
                <!-- Error for last name -->
                <% if (form_error[0]) {%> 
                    <p style="font-size: xx-small; color: red;"><%= form_error[0].surname %></p>
                <% } %> 
                <label id="surname">
                    <input 
                        type="text"
                        name="surname"
                        placeholder='<%= language['LAST_NAME_PLACE_HOLDER'] %>' 
                    />
                </label>
                <label id="signin-footer">
                    <button id='signUpButton' type="submit"><%= language['SIGN_UP_BUTTON'] %></button>
                    <span> <a href="/iv1201-recruitmenapp/us-central1/app/auth/login?language=<%= selectedLanguage %>" style="text-decoration: none; color:black;"><%= language['ALREADY_REGISTERED_USER'] %></a></span>
                </label>
            </div>
        </form>
    </body>
</html>
